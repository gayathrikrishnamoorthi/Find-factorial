package main;

public class Factorial {
	 public static int factorial(int A) {
	        if (A == 0 || A == 1) {
	            return 1;
	        }
	        return A * factorial(A - 1);
	    }

	    public static void main(String[] args) {
	        int A = 4;
	        int output = factorial(A);
	        System.out.println(output); 

	        A = 1;
	        output = factorial(A);
	        System.out.println(output);
	}

}
